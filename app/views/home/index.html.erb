<h1>Task Manager</h1>
<% if @tasks.any? %>

	<div class="row task-section">
	<% @tasks.each do |task| %>

		<div class="task col-md-6">
		<%= check_box_tag 'done', value: task.done, class: 'checkbox'%>
		<%= task.title %>
		<%= task.deadline %>
		<%= task.difficulty %>
		<%= task.importance %>
		<%= link_to 'Edit', edit_task_path(task)%>
		<%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: 'Are you sure?'}%></div>

	<% end %>
	</div>

<% else %>

	<div>No tasks yet!</div>

<% end %>

<button class="btn new-task", type="submit" value="New Task" onclick="window.location='/tasks/new';">New Task!</button>